
DROP TABLE PERSON
CREATE TABLE APP.PERSON(PID int not null,NAME varchar(40) not null, DOB date not null , ADDRESS varchar(100),CITY varchar(10),COUNTRY varchar(10), PRIMARY KEY (PID))

CREATE TABLE APP.MONTHLY_EXPENSES( MID int not null,MONTH varchar(20),AMOUNT int,CATEGORY varchar(20),PID int, PRIMARY KEY (MID), CONSTRAINT FK_P_ID FOREIGN KEY (PID) REFERENCES APP.PERSON(PID))